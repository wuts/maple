<h1>Listing photos</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Gallery</th>

    <th>Title</th>
    <th>Description</th>
    <th>Filename</th>
    <th>Ordering</th>
    <th>Language</th>

  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%=h photo.id %></td>
    <td><%=h photo.gallery_id %></td>

    <td><%=h photo.title %></td>
    <td><%=h photo.description %></td>
    <td><%=h photo.filename %></td>
    <td><%=h photo.ordering %></td>
    <td><%=h photo.language_id %></td>

    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>
