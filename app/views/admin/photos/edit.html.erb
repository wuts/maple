<h1>Editing photo</h1>

<% form_for(@photo) do |f| %>
  <%= f.error_messages %>

 <p>
    <%= f.label t(:id),nil,:style=>"display:none;" %><br />
    <%= f.hidden_field :id %>

  </p>
  <p>
    <%= f.label :gallery_id %><br />
    <%= f.text_field :gallery_id %>
  </p>
  <p>

    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :filename %><br />
    <%= f.text_field :filename %>
  </p>
  <p>
    <%= f.label :ordering %><br />
    <%= f.text_field :ordering %>
  </p>
  <p>
   <%= f.label :language_id %><br />
	<%=f.collection_select :language_id,Language.all,:id,:name,{:prompt=>true} %>  

    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :intro %><br />
    <%= f.text_field :intro %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

