<h1>Editing page</h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

   <p>
    <%= f.label :id,nil,:style=>"display:none;" %><br />
    <%= f.hidden_field :id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :language_id %><br />
	<%=f.collection_select :language_id,Language.all,:id,:name,{:prompt=>true} %>  
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
