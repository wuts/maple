<h1>New page</h1>
<% content_for :content_top do %>
   <h2><%= :pages %></h2>
   <br class="clear-both">
   <% end %>
   <% content_for :left_col do %>
      <%=render :partial=>'sidemenu' %>
   <% end %>
   <% content_for :middle_col do %>
     <div class="box">
    <h3 class="yellow"><%= t("add_"+@kind) %></h3>
    <div class="box-container">
   <% form_for(@page) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label t(:title) %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :intro %><br />
    <%= f.text_field :intro %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select :status,[["select_status","please select status"],["live","live"],["draft","draft"],["featured","featured"]] %>
  </p>
   <p class="hidden">
    <%= f.label :kind %><br />
    <%= f.select :kind,[["select_kind","please select kind"],["news","news"],["page","page"],["bulletin","bulletin"]] %>
  </p>
   <p class="hidden">
    <%= f.label :language_id %><br />
    <%=f.collection_select :language_id,Language.all,:id,:name,{:prompt=>true} %>
   </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
   </div>
    </div>
<% end %>
<%= link_to 'Back', pages_path %>
