<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>

    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>

    <%= f.label t :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label t :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p class="hidden">
    <%= f.label :article_id %><br />
    <%= f.text_field :article_id %>
  </p>
  <p class="hidden">
    <%= f.label :parent_id %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>

    <%= f.submit t(:create) %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>
