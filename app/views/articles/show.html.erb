<%= render :partial=>@article %>

<% @article.comments.each do |comment| %>
<p>  <%= comment.comment %> </p>
<% end %>

<h1><%= t :new_comment %></h1>

<% form_for [@article,Comment.new] do |f| %>
  <%= f.error_messages %>

  <p class="hidden">
    <%= f.label t :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label t :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label t :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p class="hidden">
    <%= f.label t :article_id %><br />
    <%= f.text_field :article_id %>
  </p>
  <p class="hidden" >
    <%= f.label t :parent_id %><br />
    <%= f.text_field :parent_id %>
  </p>
  <p>
    <%= f.submit t(:create) %>
  </p>
<% end %>
