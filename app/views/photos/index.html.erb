<h1>Listing photos</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Gallery</th>
    <th>Name</th>
    <th>Intro</th>
    <th>Description</th>
    <th>Attachment</th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%=h photo.id %></td>
    <td><%=h photo.gallery_id %></td>
    <td><%=h photo.name %></td>
    <td><%=h photo.intro %></td>
    <td><%=h photo.description %></td>
    <td><%=h photo.attachment %></td>
    <td><%= link_to 'Show', photo %></td>
    <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New photo', new_photo_path %>