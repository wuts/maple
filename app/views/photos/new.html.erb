<h1>New photo</h1>

<% form_for(@photo) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t(:id),nil,:style=>"display:none;" %><br />
    <%= f.hidden_field :id %>
  </p>
    <p>
   <%= f.label :language_id %><br />
	<%=f.collection_select :language_id,Language.all,:id,:name,{:prompt=>true} %>  
  </p>
  <p>
    <%= f.label :gallery_id %><br />
   	<%=f.collection_select :gallery_id,Gallery.all,:id,:title,{:prompt=>true} %>  
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :filename %><br />
    <%= f.text_field :filename %>
  </p>
  <p>
    <%= f.label :ordering %><br />
    <%= f.text_field :ordering %>
  </p>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', photos_path %>
